{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true
    ,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/*"]
    }
  },
  "include": ["index.ts", "src/**/*.ts"]
}
